<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragment.LimitFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:background="@drawable/custom_button_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:text="S2 GAME"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/white"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/gameS2Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#0000"
                android:textStyle="bold"
                android:hint="T.B.A"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updateS2Btn"
                android:text="Update"
                android:textColor="@color/white"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/gold"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/custom_button_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:text="L2 GAME"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/white"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/gameL2Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#0000"
                android:textStyle="bold"
                android:hint="T.B.A"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updateL2Btn"
                android:text="Update"
                android:textColor="@color/white"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/gold"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:background="@drawable/custom_button_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:text="TS3 GAME"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/white"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/gameTS3Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#0000"
                android:textStyle="bold"
                android:hint="T.B.A"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updateTS3Btn"
                android:text="Update"
                android:textColor="@color/white"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/gold"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/custom_button_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:text="TL3 GAME"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/white"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/gameTL3Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#0000"
                android:textStyle="bold"
                android:hint="T.B.A"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updateTL3Btn"
                android:text="Update"
                android:textColor="@color/white"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/gold"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:background="@drawable/custom_button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:text="4D GAME"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/white"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/game4DTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#0000"
            android:textStyle="bold"
            android:hint="T.B.A"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/update4DBtn"
            android:text="Update"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/gold"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>